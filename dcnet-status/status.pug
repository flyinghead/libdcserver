html
  head
    title DCNet Game Server Status
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css')
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet' href='css/style.css')
    link(rel='icon' type='image/png' href='/favicon-32x32.png' sizes='32x32')
    link(rel='icon' type='image/png' href='/favicon-16x16.png' sizes='16x16')
  body
    section(class='ftco-section')
      div(class='container')
        div(class='row justify-content-center')
          div(class='col-md-6 text-center mb-5')
            h2(class='heading-section') DCNet Game Server Status
        div(class='row')
          div(class='col-md-12')
            div(class='table-wrap')
              table(class='table table-responsive-xl')
                thead
                  tr
                    th &nbsp;
                    th Name
                    th Players
                    th Games
                tbody 
                  each status in statusArray
                    tr(class='alert' role='alert')
                      unless status.online
                        td âŒ
                      else if status.playerCount > 0
                        td ðŸ”¥
                      else
                        td âœ…
                      td(class='d-flex align-items-center main')
                        div(class='img' style='background-image: url(' + status.thumbnail + ');')
                        div(class='pl-3')
                          span= status.name
                      td(class='status')
                        case status.playerCount
                          when 0
                            if status.online
                              span(class='waiting') No player
                            else
                              span(class='inactive') Offline
                          when 1
                            span(class='active') 1 player
                          default
                            span(class='active') #{status.playerCount} players
                      td(class='status')
                        if status.gameCount > 0
                          span(class='active') #{status.gameCount} game#{status.gameCount > 1 ? 's' : ''}


